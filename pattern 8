#include <bits/stdc++.h>
using namespace std;
class solution{
public:
void printsquare(int n){
     for(int j=0;j<n;j++){
                for(int k=0;k<j;k++){
                    cout<<" ";
                }
                for(int k=0;k<2*n-2*j-1;k++){
                    cout<<"*";
                }
            cout<<endl;
        }
    }
};
//Driver Code Starts
int main(){
int t;
cin>>t;
while(t--){
int n;
cin>>n;
solution ob;
ob.printsquare(n);
}
return 0;
}
//Driver Code Ends
